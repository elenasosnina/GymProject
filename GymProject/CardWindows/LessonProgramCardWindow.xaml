<Window x:Class="GymProject.CardWindows.LessonProgramCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymProject.CardWindows"
        mc:Ignorable="d"
        Icon="C:\Users\user\source\repos\GymProjectgit — копия — копия\GymProject\dumbbell.png"
       Title="Карта программы занятия" Height="232" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" Width="250" Margin="0,2,0,13">
        <Label Content="Название" />
        <TextBox x:Name="Name" Width="250"  />
        <Label Content="Описание" />
        <TextBox x:Name="Description" Width="250" />
        <Label Content="Продолжительность" />
        <TextBox x:Name="ProgramDuration"  Width="250" />
        <Button Content="Сохранить" Click="Button_Click"  Margin="0 10"/>
    </StackPanel>
</Window>
