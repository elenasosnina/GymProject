<Window x:Class="GymProject.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymProject.Windows"
        mc:Ignorable="d"
        Icon="C:\Users\user\source\repos\GymProjectgit — копия — копия\GymProject\dumbbell.png"
        Title="Окно авторизации" Height="202" Width="225" MinHeight="250" MinWidth="400" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" Height="200" Width="250">
        <Label  Content="Логин" />
        <TextBox x:Name="login" Width="250" TextDecorations="Underline" />
        <Label Content="Пароль" />
        <TextBox x:Name="password" Width="250"/>
        <Button Content="Войти" Margin="0 20 0 5" Click="Button_Click"/>
        <Button x:Name="Guest" Content="Войти как гость" Click="Guest_Click"/>
    </StackPanel>
 
</Window>
